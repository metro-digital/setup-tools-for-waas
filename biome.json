{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "files": {
    "includes": ["src/*.ts", "tests/*.ts"]
  },
  "formatter": {
    "enabled": true,
    "includes": ["src/*.ts", "tests/*.ts"],
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "includes": ["src/*.ts"],
    "rules": {
      "recommended": true
    }
  }
}
